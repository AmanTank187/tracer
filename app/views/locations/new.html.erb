
<h1 class="text-center mt-4" id="index-header">Add Location</h1>
<div class="container">
<div class="row justify-content-center">
    <div class="col-10">
    <%= form_with scope: :location, url: locations_path, local: true  do |f| %>
        <div class="form-group ">
            <%= f.label :address, class: "col-2 col-form-label text-info" %>
            <div class="col-10">
            <%= f.text_field :address, class: "form-control", placeholder: "Address" %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :longitude, class: "col-2 col-form-label text-info"%>
            <div class="col-10">
                <%= f.number_field :longitude,rows: 8, class: "form-control" ,placeholder: "Longitude" %>
            </div>
        </div>

        <div class="form-group">
            <%= f.label :latitude, class: "col-2 col-form-label text-info"%>
            <div class="col-10">
                <%= f.number_field :latitude,rows: 8, class: "form-control" ,placeholder: "Latitude" %>
            </div>
        </div>

        <div class="form-group row justify-content-center">
                <%= f.submit class: "btn btn-outline-info btn-lg" %>
                </div>
            <% end %>
        </div> 
    <div class="mb-3">
        <%= link_to ' Cancel ', root_path, class: "text-info" %>
    </div>
</div>
</div>